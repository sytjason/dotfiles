(defwidget bar []
    (centerbox :orientation "h"
        (workspaces)
        (windows)
        (sidestuff)
    )
)

(defwindow mywindow
    :monitor 0
    :geometry (geometry :x "0%"
                        :y "0%"
                        :width "100%"
                        :height "1.5%"
                        :anchor "top center")
    :exclusive true
    (bar))


(defwidget sidestuff []
    (box :class "sidestuff" :orientation "h" :space-evenly false :halign "end"
        (systray :spacing 1
            :orientation "horizontal"
            :icon-size 20
        )
        (time)
    )
)
